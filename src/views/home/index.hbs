{{#> core/main }}
<div class=" my-auto row row-cols-1 row-cols-md-2 row-cols-xl-2 justify-content-center">
    <section class="col text-center">
        <h1 class="display-5 fw-bold my-5">Animaciones japonesas</h1>
        <form
            role="search"
            id="searchAnimation"
            class="needs-validation mb-3"
            novalidate
        >
            <div class="input-group mb-3">
                <input
                    class="form-control"
                    id="search"
                    type="search"
                    placeholder=""
                    aria-label="Search"
                    pattern=".*\w+.*"
                    required
                >
                <button
                    class="btn btn-outline-primary rounded-end"
                    type="submit"
                    id="button-addon1"
                >Buscar</button>
                <div class="invalid-feedback">
                    Rellene este campo.
                </div>
            </div>
        </form>

        <form
            id="optionSearch"
            class="d-flex justify-content-evenly"
        >
            <span class="fs-5 text-start float-none m-0">
                Buscar por:
            </span>
            <div class="form-check form-check-inline">
                <input
                    class="form-check-input"
                    type="radio"
                    name="searchType"
                    value="id"
                    id="byId"
                    checked
                >
                <label
                    class="form-check-label"
                    for="byId"
                >ID
                </label>
            </div>
            <div class="form-check form-check-inline">
                <input
                    class="form-check-input"
                    type="radio"
                    name="searchType"
                    id="byName"
                    value="name"
                >
                <label
                    class="form-check-label"
                    for="byName"
                >Nombre
                </label>
            </div>
        </form>
    </section>
</div>
{{/core/main}}